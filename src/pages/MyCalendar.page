                         <b> My Events </b> </li></span> -->
                </ul>
                <div style="clear:both;"><!--fix floats--></div>
            </div>
            <div style="clear:both;"><!--fix floats--></div>
            <div id="calendar"></div>
           <!-- </div>-->
        </apex:form>
    </apex:outputPanel>
</apex:page>